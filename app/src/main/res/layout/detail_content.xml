<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:text="اخرین خبر "
        android:id="@+id/txt_detailContent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_detailContent_date"
        android:layout_margin="8dp"
        android:text="17 مرداد"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_below="@+id/txt_detailContent_title"
        android:id="@+id/card_detailContent_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="4dp"
            android:id="@+id/txt_ditailContent_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </android.support.v7.widget.CardView>
</RelativeLayout>